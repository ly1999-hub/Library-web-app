extends ../layouts/common.pug

block content
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger=error
  form(action="/users/create" method="POST")
    label Name 
    br
    input(type="text", name="name",class="form-control",value=value?value.name:"")
    button(class="btn btn-primary btn-lg mt-1") Create