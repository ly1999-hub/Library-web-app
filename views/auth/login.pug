extends ../layouts/common.pug

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger=error

    form(method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(name="email",type="text",value=value?value.email:"")
        
        .form-group
            label(for="password") Password
            input#password.form-control(name="password",type="password",value=value?value.password:"")
        
        button.btn.btn-dark Login